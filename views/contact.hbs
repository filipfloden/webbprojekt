<section class="page-section" id="contact">
            <div class="container">
                <!-- Contact Section Heading-->
                <div class="text-center">
                    <h2 class="page-section-heading text-secondary d-inline-block mb-0">CONTACT</h2>
                </div>
                <!-- Icon Divider-->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>
                <!-- Contact Section Content-->
                <form class="contact-form" action="" method="post">
                    <div class="contact-item mb-4">
                        <i class="fas fa-user icon-size"></i>
                        <input required type="text" class=" p-1 contact-input" placeholder="Name">
                    </div>
                    <div class="contact-item mb-4">
                        <i class="far fa-envelope icon-size"></i>
                        <input required type="email" class=" p-1 contact-input" placeholder="Email">
                    </div>
                    <div class="contact-item mb-4">
                        <i class="fas fa-mobile-alt icon-size"></i>
                        <input required type="tel" class=" p-1 contact-input" placeholder="Phone">
                    </div>
                    <div class="contact-item mb-4">
                        <i class="fas fa-comment"></i>
                        <input required type="text" class="p-1 contact-input" placeholder="Message">
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </section>