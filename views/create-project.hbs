<section class="page-section mt-4">
    <div class="container">
        <form id="create-project" class="m-3" method="post" enctype="multipart/form-data" action="/create-project">
            <div class="form-group">
                <label for="project-title">Project Title</label>
                <input required type="text" class="form-control" id="project-title" name="title">
            </div>
            <div class="form-group">
                <label for="project-description">Project Description</label>
                <textarea required type="text" class="form-control textarea-portfolio" id="project-description" name="description" style="resize: none;"></textarea>
            </div>
            <div class="form-group">
                <label for="project-image">Project Image</label>
                <input required type="file" class="form-control p-1" name="image">
            </div>
            <button class="btn btn-secondary" type="button" onclick="location.href='/portfolioo'">Cancel</button>
            <button class="btn btn-primary" type="submit">Add project</button>
        </form>
    </div>
</section>