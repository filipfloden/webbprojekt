<section class="page-section">
    <div class="container">
            <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        {{#if isLoggedIn}}
            {{#if questions.length}}
                    {{#each questions}}
                        {{#if answer}}
                            <form id="edit-question" class="m-3" method="post" action="/edit-question">
                                <div class="form-group">
                                    <label for="project-title"><h4>{{question}}</h4></label>
                                </div>
                                <div class="form-group">
                                    <label for="question-answer">Edit Answer</label>
                                    <textarea type="text" class="form-control textarea-portfolio" id="edit-answer" name="answer" style="resize: none;">{{answer}}</textarea>
                                </div>

                                <button class="btn btn-secondary" type="button" onclick="location.href='/faq'">Cancel</button>
                                <button class="btn btn-primary" type="submit">Save Changes</button>
                                <input type="hidden" name="id" value="{{id}}">
                            </form>
                        {{/if}}
                {{/each}}
            {{/if}}
        {{else}}
        <div class="container text-center">
            <h3>You need to be logged in to see this page</h3>
        </div>
        {{/if}}
    </div>
</section>